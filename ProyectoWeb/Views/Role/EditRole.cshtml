@model EditRoleVM

@{
    ViewBag.Title = "Editar Rol";
}

<div class="container my-5">
    <h1 class="text-center mb-4 text-primary">Editar Rol</h1>

    <form method="post" class="mt-3 shadow-lg p-4 bg-white rounded">
        <input type="hidden" asp-for="Id" />

        <!-- Nombre del Rol -->
        <div class="form-group mb-3">
            <label asp-for="RoleName" class="form-label">Nombre del Rol</label>
            <input asp-for="RoleName" class="form-control" placeholder="Ingrese el nombre del rol" />
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>

        <!-- Descripción -->
        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label">Descripción</label>
            <input asp-for="Description" class="form-control" placeholder="Ingrese una descripción del rol" />
        </div>

        <!-- Resumen de validaciones -->
        <div asp-validation-summary="All" class="text-danger"></div>

        <!-- Botones de acción -->
        <div class="d-flex justify-content-between mt-4">
            <button type="submit" class="btn btn-primary">Guardar Cambios</button>
            <a asp-controller="Role" asp-action="ListRoles" class="btn btn-outline-secondary">Cancelar</a>
        </div>
    </form>

    <!-- Usuarios con este Rol -->
    <div class="card mt-5 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Usuarios con este Rol</h3>
        </div>
        <div class="card-body">
            @if (Model.Users != null && Model.Users.Any())
            {
                <ul class="list-group">
                    @foreach (var user in Model.Users)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @user
                            <span class="badge bg-info text-white">Usuario</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="card-text text-muted">Ningún usuario asignado a este rol aún.</p>
            }
        </div>
        <div class="card-footer text-start">
            <a asp-controller="Role" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id" class="btn btn-warning">
                Añadir o Eliminar Usuarios de este Rol
            </a>
        </div>
    </div>

    <!-- Reclamaciones de Rol -->
    <div class="card mt-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Permisos de Rol</h3>
        </div>
        <div class="card-body">
            @if (Model.Claims != null && Model.Claims.Any())
            {
                <ul class="list-group">
                    @foreach (var claim in Model.Claims)
                    {
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            @claim
                            <span class="badge bg-success text-white">Reclamación</span>
                        </li>
                    }
                </ul>
            }
            else
            {
                <p class="card-text text-muted">No hay reclamaciones asignadas a este rol.</p>
            }
        </div>
        <div class="card-footer text-start">
            <a asp-action="ManageRoleClaims" asp-controller="Role" asp-route-RoleId="@Model.Id" class="btn btn-warning">
                Editar Reclamaciones
            </a>
        </div>
    </div>
</div>
