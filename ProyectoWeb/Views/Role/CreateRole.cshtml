@model CreateRolVM

@{
    ViewBag.Title = "Create New Role";
}

<form asp-action="CreateRole" method="post" class="mt-3">
    <div asp-validation-summary="All" class="text-danger">
    </div>

    <div class="form-group row">
        <label asp-for="RoleName" class="col-sm-2 col-form-label">Nombre</label>
        <div class="col-sm-10">
            <input asp-for="RoleName" class="form-control" placeholder="Nombre">
            <span asp-validation-for="RoleName" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label">Descripción</label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Descripción">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
            <button type="submit" class="btn btn-primary" style="width:auto">
                Crear Rol
            </button>
        </div>
    </div>
</form>
